hr {
  margin-top: 0.5rem;
  margin-bottom: 0.5rem;
}

#today {
  padding-top: 12px;
  padding-bottom: 12px;
  background-color: white;
}

.past-day {
  opacity: 0.5;
  background-color: #C2D0CB;
  &:hover {
    opacity: 1;
  }
}

.row {
  border-radius: 25px;
  padding: 30px;
  display: block;
}

.future-day {
  padding-top: 12px;
  padding-bottom: 12px;
  background-color: #C2D0CB;
}

.watering-container {
  margin: 3rem;
  margin-top: 1rem;
}

.watered-plant-name {
  text-decoration: line-through;
  color: darkgreen;
}

.plant-check-icon {
  img {
    width:50px;
    &:hover {
      -webkit-box-shadow: 0px 38px 26px -14px skyblue;
      box-shadow: 0px 38px 26px -14px skyblue;
    }
  }
}

.watered-plant-image{
	content: image-url("<%= image_url("icons/plant_check_transparent_cropped.png") %>");
}

.draggable {
  margin-left: 10px;
  margin-right: 10px;
  padding: 10px;
}

.droppable {
  display: flex;
}

.collapsible {
  padding-top: 10px;
  padding-bottom: 10px;
  border-radius: 10px;
  
  .droppable {
    display: none;
  }
}

.weekday, 
.date {
  display: inline;
  padding-left: 5px;
}

.date {
  padding-bottom: 3px;
  font-size: 1.25rem;
}

.caretaking {
  background-color: rgba(180,200,200,0.8)
}

.owned {
  background-color: rgba(209, 193, 189, 0.8);
  
}

.garden-container  {
  margin: 10px;
  min-width: 250px;
  border-radius: 10px;
}

.garden-day-header {
  padding-left: 20px;
  padding-top: 10px;
  margin-bottom: 0;
  text-transform: uppercase;
  font-size: smaller;
}
