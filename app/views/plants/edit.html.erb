<h1>Update Plant Information</h1>
<%= form_for @plant do |f| %>
  <% if @errors %>
    <ul>
      <div class="flash">
        <%= @errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </div>
    <% end %>
    </ul>

    <%= f.label :name, "Plant Name" %>
    <%= f.text_field :name %>
    <%= f.label :times_per_week, "Watering Requirements" %>
    <%= f.text_field :times_per_week %>
    <%= f.submit %>

  <% end %>
