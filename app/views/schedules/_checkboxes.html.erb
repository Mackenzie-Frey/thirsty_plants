<% day.waterings.each do |watering| %>
  <p>
  <%= form_for(watering) do |f|%>
    <%= tag.span(class: "plant_icon", id: "watering-#{watering.id}-icon", data: {id: watering.id}) do %>
      <%= image_tag("/assets/icons/plant_check_transparent_cropped.png") %>
    <% end %>
    <%= tag.span(id: "watering-#{watering.id}-name", class: watering.css_plant_name_class) do %>
      <%= watering.plant.name %>
    <% end %>
    <%= f.text_field(:completed, hidden: true, id: "watering-#{watering.id}-completed") %>
    <%= f.submit(hidden: true, id: "update-watering-#{watering.id}") %>
  <% end %>
  </p>

<% end %>
